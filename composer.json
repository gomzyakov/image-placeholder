{
    "name": "gomzyakov/image-placeholder",
    "description": "Simple image placeholder generator on PHP",
    "type": "package",
    "license": "MIT",
    "keywords": [
        "php",
        "image",
        "placeholder",
        "generator"
    ],
    "homepage": "https://github.com/gomzyakov/image-placeholder",
    "authors": [
        {
            "name": "Alexander Gomzyakov",
            "email": "alexander.gomzyakov@gmail.com"
        }
    ],
    "require": {
        "php": "^8.3",
        "ext-gd": "*",
        "kornrunner/blurhash": "^1.2"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.62",
        "gomzyakov/code-style": "^2.0",
        "phpunit/phpunit": "^12.0",
        "phpstan/phpstan": "^2.1",
        "mockery/mockery": "^1.6",
        "rector/rector": "^2.1"
    },
    "autoload": {
        "psr-4": {
            "Gomzyakov\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "fix": "@php ./vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.dist.php",
        "cs-check": "@php ./vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.dist.php --dry-run",
        "phpstan": "@php ./vendor/bin/phpstan analyze -c ./phpstan.neon.dist --no-progress --ansi",
        "phpunit": "@php ./vendor/bin/phpunit ./tests --no-coverage --color=always",
        "rector": "@php ./vendor/bin/rector process",
        "rector-check": "@php ./vendor/bin/rector process --dry-run",
        "test": [
            "@cs-check",
            "@phpstan",
            "@rector",
            "@phpunit"
        ]
    }
}
